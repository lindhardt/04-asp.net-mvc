@model PhotoSharingApplication.Models.Photo

@{
    ViewBag.Title = "Delete Photo: " + Model.Title;
}

<h2>Delete Photo: "@Model.Title"</h2>

<p>Are you sure you want to delete this photo?</p>

@using (Html.BeginForm("Delete", "Photo", FormMethod.Post))
{
    <div class="photo-display">
        <img width="200" src="@Url.Action("GetImage", "Photo", new { id = Model.PhotoID })" />
    </div>
            
    <div class="photo-description">
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="photo-metadata">
        <div>
            <span class="display-label">
                @Html.DisplayNameFor(model => model.UserName):
            </span>
            <span class="display-field">
                @Html.DisplayFor(model => model.UserName)
            </span>
        </div>

        <div>
            <span class="display-label">
                @Html.DisplayNameFor(model => model.CreatedDate):
            </span>
            <span class="display-field">
                @Html.DisplayFor(model => model.CreatedDate)
            </span>
        </div>
    </div>

    <p>
        <input type="submit" value="Delete" />
        @Html.ActionLink("Back to List", "Index")
    </p>
}
