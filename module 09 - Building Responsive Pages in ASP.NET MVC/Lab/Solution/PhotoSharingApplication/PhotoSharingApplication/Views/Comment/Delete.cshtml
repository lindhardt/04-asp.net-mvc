@model PhotoSharingApplication.Models.Comment

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this comment?</h2>

<h3>Photo Title: "@Html.DisplayFor(model => model.Photo.Title)"</h3>        

<div class="photo-comment">

    <div class="photo-comment-from">
        From:
        @Html.DisplayFor(model => model.UserName)
    </div>

    <div class="photo-comment-subject">
        @Html.DisplayNameFor(model => model.Subject):
        @Html.DisplayFor(model => model.Subject)
    </div>

    <div class="photo-comment-body">
        @Html.DisplayFor(model => model.Body)
    </div>

</div>

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to Photo", "Display", "Photo", new { id = ViewBag.PhotoID }, null)
    </p>
}

