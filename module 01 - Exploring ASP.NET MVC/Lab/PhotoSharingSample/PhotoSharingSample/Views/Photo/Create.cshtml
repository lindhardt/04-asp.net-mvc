@model PhotoSharingApplication.Models.Photo

@{
    ViewBag.Title = "Create New Photo";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div>
        <span class="editor-label">
            @Html.LabelFor(model => model.Title):
        </span>
        <span class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </span>
    </div>

    <div>
        <span class="editor-label">
            Upload new @Html.LabelFor(model => model.PhotoFile):
        </span>
        <span class="editor-field">
            <input class="pic-upload-input" type="file" name="Image">
        </span>
    </div>

    <div>
        <span class="editor-label">
            @Html.LabelFor(model => model.Description):
        </span>
        <span class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </span>
    </div>

    <div>
        <span class="editor-label">
            @Html.LabelFor(model => model.UserName):
        </span>
        <span class="editor-field">
            @Html.DisplayFor(model => model.UserName)
        </span>
    </div>

    <div>
        <span class="editor-label">
            @Html.LabelFor(model => model.CreatedDate):
        </span>
        <span class="editor-field">
            @Html.DisplayFor(model => model.CreatedDate)
        </span>
    </div>

    <div>
        <span class="editor-label">
            @Html.LabelFor(model => model.ModifiedDate):
        </span>
        <span class="editor-field">
            @Html.DisplayFor(model => model.ModifiedDate)
        </span>
    </div>

    <p>
        <input type="submit" value="Create" /> 
        @Html.ActionLink("Back to List", "Index")
    </p>
}

